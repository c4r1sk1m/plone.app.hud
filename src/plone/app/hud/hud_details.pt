<div>
    <h2 i18n:translate="">Content Item Details</h2>
    <h3 tal:content="view/path" />

    <div class="tagdiv">
        <p i18n:translate="">Sharing</p>
        <table class="listing itemfont">
            <tr>
                <th i18n:translate="">ID</th>
                <th i18n:translate="">Title</th>
                <th i18n:translate="">Contributor</th>
                <th i18n:translate="">Editor</th>
                <th i18n:translate="">Reviewer</th>
                <th i18n:translate="">Reader</th>
            </tr>
            <tr tal:repeat="entry view/roles">
                <td>
                    <a tal:attributes="href entry/url" tal:content="entry/id" />
                </td>
                <td tal:content="entry/title" />
                <td>
                    <span tal:condition="entry/roles/Contributor" tal:content="entry/roles/Contributor" />
                </td>
                <td>
                    <span tal:condition="entry/roles/Editor" tal:content="entry/roles/Editor" />
                </td>
                <td>
                    <span tal:condition="entry/roles/Reviewer" tal:content="entry/roles/Reviewer" />
                </td>
                <td>
                    <span tal:condition="entry/roles/Reader" tal:content="entry/roles/Reader" />
                </td>
            </tr>
        </table>
    </div>
    <p>&nbsp;</p>

</div>